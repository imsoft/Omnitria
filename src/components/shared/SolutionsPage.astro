---
import type { OurService } from "@/interface";
import { Image } from "astro:assets";

const { imageSrc, altText, title, description, features } =
  Astro.props as OurService;
---

<div class="bg-white dark:bg-zinc-900">
  <div aria-hidden="true" class="relative">
    <Image
      src={imageSrc}
      alt={altText}
      class="h-96 w-full object-cover object-center"
      width={1920}
      height={1080}
      loading={"eager"}
    />
    <div
      class="absolute inset-0 bg-gradient-to-t from-zinc-50 dark:from-zinc-900"
    >
    </div>
  </div>

  <div
    class="relative mx-auto -mt-12 max-w-7xl px-4 pb-16 sm:px-6 sm:pb-24 lg:px-8"
  >
    <div class="mx-auto max-w-2xl text-center lg:max-w-5xl">
      <h2
        class="text-3xl font-bold tracking-tight text-zinc-900 dark:text-zinc-50 sm:text-4xl"
      >
        {title}
      </h2>
      <p class="mt-4 text-zinc-700 dark:text-zinc-400">{description}</p>
    </div>

    <dl
      class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 sm:gap-y-16 lg:max-w-none lg:grid-cols-3 lg:gap-x-8"
    >
      {
        features.map((feature) => (
          <div class="border-t border-zinc-300 dark:border-zinc-600 pt-4">
            <dt class="font-medium text-zinc-900 dark:text-zinc-50">
              {feature.title}
            </dt>
            <dd class="mt-2 text-sm text-zinc-700 dark:text-zinc-400">
              {feature.description}
            </dd>
          </div>
        ))
      }
    </dl>
  </div>
</div>
