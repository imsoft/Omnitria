---
interface Props {
  title: string;
  content: string;
}

const { title, content } = Astro.props;
---

<section class="bg-white dark:bg-zinc-900">
  <h2 class="text-2xl font-semibold mb-4 text-zinc-900 dark:text-white">
    {title}
  </h2>
  <p class="leading-relaxed text-zinc-700 dark:text-zinc-300">
    {content}
  </p>
</section>
