---
import { Image } from 'astro:assets';

interface Props {
  imageSrc: string;
  title: string;
  description: string;
  category: string;
  link: string;
}

const { imageSrc, title, description, category, link } = Astro.props;
---

<div
  class="flex flex-col items-start justify-between transition ease-in-out delay-150 hover:-translate-y-6 duration-300"
>
  <div class="relative w-full">
    <Image
      src={imageSrc}
      alt={title}
      class="aspect-[16/9] w-full rounded-2xl bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2]"
      width={600}
      height={400}
    />
    <div
      class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"
    >
    </div>
  </div>
  <div class="max-w-xl">
    <div class="group relative">
      <h3
        class="mt-3 text-lg/6 font-semibold text-gray-900 group-hover:text-gray-600"
      >
        <a href={link} target="_blank">
          <span class="absolute inset-0"></span>
          {title}
        </a>
      </h3>
      <p class="mt-5 line-clamp-3 text-sm/6 text-gray-600">{description}</p>
      <div class="mt-4 flex items-center gap-x-4 text-xs">
        <a
          href={link}
          class="relative z-10 rounded-full bg-slate-50 px-3 py-1.5 font-medium text-slate-600 hover:bg-slate-100"
        >
          {category}
        </a>
      </div>
    </div>
  </div>
</div>
