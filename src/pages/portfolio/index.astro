<Layout title="Omnitria | Portfolio">
  <div class="bg-white py-12 sm:py-16">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2
          class="text-balance text-4xl font-semibold tracking-tight text-gray-900 sm:text-5xl"
        >
          Our Portfolio
        </h2>
        <p class="mt-2 text-lg/8 text-gray-600">
          Discover the success stories of our clients and see how Omnitria’s
          custom solutions have driven their growth.
        </p>
      </div>
      <div
        class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3"
      >
        {
          portfolio.map((project) => (
            <ProjectCard
              imageSrc={project.imageSrc}
              title={project.title}
              description={project.description}
              category={project.category}
              link={project.link}
            />
          ))
        }
      </div>
    </div>
  </div>
</Layout>
