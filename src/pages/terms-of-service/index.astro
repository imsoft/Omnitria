---
import "@/styles/globals.css";

import Layout from "@/layouts/Layout.astro";
import ContractText from "@/components/shared/ContractText.astro";
---

<Layout title="Omnitria | Terms of service">
  <section class="max-w-full mx-auto px-6 py-12 bg-white dark:bg-black">
    <div class="max-w-3xl mx-auto">
      <h1 class="text-3xl font-semibold text-zinc-900 dark:text-zinc-50 mb-6">
        Omnitria Terms of Service
      </h1>
      <p class="text-zinc-600 dark:text-zinc-400 text-sm mb-8">
        Last Updated: 11/15/2024
      </p>

      <div class="space-y-8 text-zinc-700 dark:text-zinc-300">
